<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sebastian.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tResultado"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/siete"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bSiete"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/ocho"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bOcho"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/nueve"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bNueve"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/mas"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/olive"
            android:id="@+id/bMas"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/cuatro"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bCuatro"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/cinco"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bCinco"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/seis"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bSeis"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/menos"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/olive"
            android:id="@+id/bMenos"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/uno"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bUno"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/dos"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bDos"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/tres"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bTres"
            />

        <Button
            android:id="@+id/bPor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@color/olive"
            android:text="@string/por"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/punto"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bPunto"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/cero"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bCero"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/igual"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/darkcyan"
            android:id="@+id/bIgual"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:text="@string/dividido"
            android:textStyle="bold|italic"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:background="@color/olive"
            android:id="@+id/bDividido"
            />
    </LinearLayout>



</LinearLayout>
